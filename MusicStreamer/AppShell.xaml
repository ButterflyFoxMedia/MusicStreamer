<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MusicStreamer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MusicStreamer"
    Title="MusicStreamer"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Home">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Account">
        <ShellContent
            Title="Account"
            ContentTemplate="{DataTemplate local:Account}"
            Route="Account" />
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local:Settings}"
        Route="Settings" />
    </FlyoutItem>

</Shell>
