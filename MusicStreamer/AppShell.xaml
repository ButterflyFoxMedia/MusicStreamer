<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MusicStreamer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MusicStreamer"
    Title="MusicStreamer"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Home"
                FlyoutItemIsVisible="True">
        <Tab Title="MainPage"
         Route="MainPage">
            <ShellContent Title="Servers"
                ContentTemplate="{DataTemplate local:Servers}"
                Route="Servers" />
            <ShellContent Title="Media"
                ContentTemplate="{DataTemplate local:Media}"
                Route="Media" />
            <ShellContent Title="Local"
                ContentTemplate="{DataTemplate local:Local}"
                Route="Local" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Account"
                FlyoutItemIsVisible="True">
        <ShellContent
            Title="Account"
            ContentTemplate="{DataTemplate local:Account}"
            Route="Account" />
    </FlyoutItem>

    <FlyoutItem Title="Settings"
                FlyoutItemIsVisible="True">
        <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate local:Settings}"
        Route="Settings" />
    </FlyoutItem>

    <FlyoutItem Title="Emby"
                FlyoutItemIsVisible="False">
        <ShellContent
            Title="Emby"
            ContentTemplate="{DataTemplate local:LoginPage}"
            Route="LoginPage" />
    </FlyoutItem>

    <FlyoutItem Title="Plex"
            FlyoutItemIsVisible="False">
        <ShellContent
        Title="Plex"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />
    </FlyoutItem>

</Shell>
